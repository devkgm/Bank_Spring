<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.devkgm.app.board.product.ProductDAO">
	<select id="getList" resultType="ProductDTO" parameterType="BoardPager">
		SELECT * FROM
		(
			SELECT ROWNUM AS R,  P.*
			FROM 
			(
				SELECT *
				FROM PRODUCT P
				ORDER BY ID DESC
			) P
		)
		WHERE R BETWEEN #{startPage} AND #{lastPage}
	</select>
	
	<select id="getDetail" resultType="ProductDTO" parameterType="ProductDTO">
		SELECT * FROM PRODUCT WHERE ID = #{id}
	</select>
	<insert id="add" parameterType="ProductDTO">
		INSERT INTO PRODUCT (ID,NAME,CONTENT,RATE,IS_SALE) VALUES (PRODUCT_SEQ.NEXTVAL, #{name}, #{content}, #{rate}, #{is_sale})
	</insert>
	
	<select id="getTotalPage" resultType="Long">
		SELECT COUNT(*) FROM PRODUCT
	</select>
</mapper>